<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_margin="0dp"
                android:orientation="vertical"
                android:padding="0dp" >

                <ViewFlipper
                    android:id="@+id/vfEvents"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_margin="0dp"
                    android:padding="-70dp" >

                    <ImageView
                        android:id="@+id/ivEvents1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/even1" />

                    <ImageView
                        android:id="@+id/ivEvents2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/even2" />
                    
                      <ImageView
                        android:id="@+id/ivEvents2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/even3" />
                </ViewFlipper>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                android:padding="0dp" >

                           <ImageView
                               android:id="@+id/ivcontacts"
                               android:layout_width="168dp"
                               android:layout_height="88dp"
                               
               				
								android:paddingRight="5dp"
                               android:paddingTop="10dp"
                               
                               android:src="@drawable/lowrescontacts" />
					  <ImageView
                        android:id="@+id/ivMenuInfo"
                        android:layout_width="168dp"
                        android:layout_height="90dp"
                        android:layout_margin="0dp"
                        android:paddingTop="8dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/lowrespicinfo" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_margin="0dp"
                android:orientation="vertical"
                android:padding="0dp" >

                <ViewFlipper
                    android:id="@+id/vfWorkshops"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_margin="0dp"
                    android:padding="0dp" >

                    <ImageView
                        android:id="@+id/ivAndroidWorkshop"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/work1" />

                    <ImageView
                        android:id="@+id/ivWorkshop1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/work2" />

                    <ImageView
                        android:id="@+id/ivWorkshop2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/work3" />

                </ViewFlipper>
            </LinearLayout>
             
        </LinearLayout>
  
    </ScrollView>

</LinearLayout>